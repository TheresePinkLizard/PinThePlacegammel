@model Pin

<h2>Delete pin</h2>

<h3>Are you sure you want to delete this pin?</h3>
<div>
    <h4>Pin</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Pin Id</dt>
        <dd class="col-sm-10">@Model.PinId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@Model.Rating</dd>

        <dt class="col-sm-2">Comment</dt>
        <dd class="col-sm-10">@Model.Comment</dd>

        <dt class="col-sm-2">Image URL</dt>
        <dd class="col-sm-10">@Model.ImageUrl</dd>
    </dl>
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.PinId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Table" class="btn btn-secondary">Cancel</a>
    </form>
</div>